<h1> Meus envios </h1>
<table>
  <thead>
    <tr>
      <th>Tarefa</th>
      <th>Validada</th>
      <th>Pontos</th>
      <th>Feedback</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% BixeSendsTask.where(bixe_id: RelUserBixe.find_by_user_id(current_user.id).bixe_id).each do |b| %>
      <tr>
        <td><%= Task.find(b.task_id).name %></td>
        <td><%= b.is_valid %></td>
        <td><%= b.score %></td>
        <td><%= b.feedback %></td>
        <td><%= link_to 'Show', b %></td>
        <td><%= link_to 'Destroy', b, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', root_path %>
