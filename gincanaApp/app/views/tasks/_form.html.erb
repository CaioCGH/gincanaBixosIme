  </div>

  <div class="field">
    <%= form.label :max_send %>
    <%= form.number_field :max_send %>
  </div>

  <div class="field">
    <%= form.label :have_feedback %>
    <%= form.check_box :have_feedback %>
  </div>

  <div class="actions">
