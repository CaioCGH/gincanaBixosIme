  </div>

  <div class="field">
    <%= form.label :have_score %>
    <%= form.check_box :have_score %>
  </div>

  <div class="field">
    <%= form.label :group %>
    <%= form.check_box :group %>
  </div>

  <div class="field">
    <%= form.label :send %>
