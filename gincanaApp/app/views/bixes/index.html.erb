<p id="notice"><%= notice %></p>
  <h1>Bixes</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Curso</th>
        <th>Tutor?</th>
        <th>Validado?</th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @bixes.each do |bix| %>
        <tr>
          <td><%= bix.name %></td>
          <td><%= bix.telephone %></td>
          <td><%= bix.course %></td>
          <td><%= bix.tutor %></td>
          <td><%= bix.is_valid %></td>
          <td><%= link_to 'Show', bix %></td>
          <td><%= link_to 'Edit', edit_bix_path(bix) %></td>
          <td><%= link_to 'Destroy', bix, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td>
            <%= form_for bix do |t| %>
              <%= t.hidden_field :is_valid, :value=>true%>
              <%= t.hidden_field :team_id, :value=>bix.id%Team.count+1 %>
              <%= t.submit "Validate" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Volta', root_path %>
  <%= link_to 'Criar novo bixe', new_bix_path %>

