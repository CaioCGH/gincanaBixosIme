  <h1>Bixes validados</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Curso</th>
        <th>Tutor?</th>
        <th>Validado?</th>
        <th>Time</th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <% @valid_bixes.each do |bix| %>
        <tr>
          <td><%= bix.name %></td>
          <td><%= bix.telephone %></td>
          <td><%= getCourse(bix).nickname %></td>
          <td><%= bix.tutor %></td>
          <td><%= bix.is_valid %></td>
          <td><%= getTeam(bix).name %></td>
          <td><%= link_to 'Detalhes', bix %></td>
          <td><%= link_to 'Editar', edit_bix_path(bix) %></td>
          <td><%= link_to 'Excluir', bix, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td>
            <%= form_for bix do |t| %>
              <%= t.hidden_field :is_valid, :value=>true%>
              <%= t.hidden_field :team_id, :value=>bix.id%Team.count+1 %>
              <%= t.submit "Validar" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
