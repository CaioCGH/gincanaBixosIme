<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Número de integrantes</th>
      <th>Pontuação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= getTeamNewcomers(team).length %></td>
        <td><%= team.score %></td>
        <td><%= link_to 'Detalhes', team %></td>
        <td><%= link_to 'Editar', edit_team_path(team) %></td>
        <td><%= link_to 'Destruir', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo time', new_team_path %>
<%= link_to 'Voltar', root_path %>

