<h1>Modalidades</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Interessados</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.name %></td>
        <td><%= interested(sport) %></td>
        <td><%= link_to 'Detalhes', sport %></td>
        <td><%= link_to 'Editar', edit_sport_path(sport) %></td>
        <td><%= link_to 'Excluir', sport, method: :delete, data: { confirm: 'Tem certeza que deseja eliminar esta modalidade?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar nova modalidade', new_sport_path %>
<%= link_to 'Voltar', root_path %>
